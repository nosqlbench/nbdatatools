<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.nosqlbench</groupId>
  <artifactId>nbdatatools</artifactId>
  <version>${revision}</version>
  <packaging>pom</packaging>
  <description>A collection of test data tools</description>
  <properties>
    <revision>1.0.0-SNAPSHOT</revision>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-enforcer-plugin</artifactId>
      <version>3.5.0</version>
    </dependency>
  </dependencies>

  <modules>
    <module>nbvectors</module>
  </modules>

  <scm>
    <connection>scm:git:git://github.com/nosqlbench/nbdatatools.git</connection>
    <developerConnection>scm:git:ssh://github.com:nosqlbench/nbdatatools.git
    </developerConnection>
    <url>http://github.com/nosqlbench/nbdatatools/tree/main</url>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <id>enforce-java</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <!--                The GraalVM vendor version is only enforced in the native profile -->
                <!--                <requireProperty>-->
                <!--                  <property>java.vendor.version</property>-->
                <!--                  <regex>.*GraalVM.*</regex>-->
                <!--                  <message>-->
                <!--                    You must use a GraalVM JDK. The detected JDK is not GraalVM.-->
                <!--                  </message>-->
                <!--                </requireProperty>-->
                <requireJavaVersion>
                  <version>[23,)</version>
                </requireJavaVersion>
                <dependencyConvergence/>
                <requireProfileIdsExist/>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.rat</groupId>
        <artifactId>apache-rat-plugin</artifactId>
        <version>0.15</version>
        <executions>
          <execution>
            <phase>verify</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <includes>
            <include>**/*.java</include>
          </includes>
          <excludes>
            <exclude>**/gen/**</exclude>
            <exclude>**/generated/**</exclude>
            <exclude>**/jmh_generated/**</exclude>
            <exclude>**/generated-sources/**</exclude>
          </excludes>
          <addLicenseHeaders>true</addLicenseHeaders>
          <copyrightMessage>Copyright (c) nosqlbench</copyrightMessage>
        </configuration>
      </plugin>

    </plugins>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>META_INF/services/**</include>
          <!--          <include>META-INF/functions</include>-->
          <!--          <include>data/**</include>-->
          <!--          <include>docs-for-virtdata/**</include>-->
          <!--          <include>docs/**</include>-->
        </includes>
      </resource>
    </resources>
  </build>

</project>